<div id="content-header">
  <%= image_tag("/images/show_settings.png") %>
  <h1><%= t('fee_collection') %></h1>
  <h3><%= t('fee_collection_description') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "Batch-wise Fee Collections" , {:controller => "invoices", :action => "new"} %> </div>
      <div class="link-descr">Create Fee Collection invoices</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "User-wise Fee Collections" , {:controller => "student", :action => "index"} %> </div>
      <div class="link-descr">Create User-wise Fee Collections</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "View" , {:controller => "invoices", :action => "index"} %>  </div>
      <div class="link-descr">Displays fee collection dates</div>
    </div>

    <div class="extender"></div>
  </div>
</div>
