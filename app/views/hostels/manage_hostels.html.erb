<div id="content-header">
  <%= image_tag("/images/show_settings.png") %>
  <h1><%= t('hostels') %></h1>
  <h3><%= "#{t('manage_hostels')}" %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

  <div class="box">

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('manage_hostels')}" , {:controller => "hostels", :action => "index"} %> </div>
      <div class="link-descr">Manage hostel details</div>
    </div>

    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('manage_rooms')}" , {:controller => "rooms", :action => "index"} %>  </div>
      <div class="link-descr">Manage room details</div>
    </div>

    <div class="extender"></div>
  </div>
</div>
