<div id="content-header">
  <%= image_tag("/images/show_settings.png") %>
  <h1>Room allocation</h1>
  <h3>Select hostel</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

  <div id="batch">
    <div class="label-field-pair"><label>Select hostel : </label>
      <div class="text-input-bg"> <%= select("id",:id,@hostels.map { |hostel| [hostel.name, hostel.id] },
          {:prompt => "Select hostel"},
          {:onChange => "#{remote_function( :url => {:action => "show_rooms_list"}, :with => "'id='+value+'&student_id='+#{@student.id}" )}"})%> </div>
    </div>
  </div>

  <div id="rooms"></div>
</div>
